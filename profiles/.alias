# ls
alias ls='ls --color=auto -h --group-directories-first'
alias ll='ls -lap'
alias lt='ls -laprt'

# grep
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# move around
alias vf='cd'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# dir shortcuts
alias ws='cd ${WORKSPACE}'
alias dotfiles='cd ${DOTFILES}'

# git
alias gc='git commit'
alias gs='git status'
alias gd='git diff'
alias gdt='git difftool'
alias ga='git add'
alias gac='git add .;git commit -m ' # git add and commit all
alias gcl='git clone'
alias gco='git checkout'
alias gl='git log'
alias gln='git log --graph --pretty=format:"%C(auto)%h%C(auto)%d %s %C(dim white)(%aN, %ar)"'
alias gp='git pull --rebase --autostash'

# build
alias mci='mvn clean install -T C1'
alias mcist='mvn clean install -DskipTests -T C1'

# sudo apt
alias apt-get='sudo apt-get'
alias apt-cache='sudo apt-cache'
alias apt='sudo apt'

# ssh
alias dojo4='ssh dojo4'
alias dojo5='ssh dojo5'

# vim.less
alias less='vim -u ${DOTFILES}/.vim/.vimrc.less'

alias nautilus='nautilus --no-desktop&'
